{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "storage",
    "sidePanel",
    "alarms",
    "tabs",
    "activeTab",
    "scripting",
    "devtools"
  ],
  "devtools_page": "src/pages/devtools/index.html",
  "side_panel": {
    "default_path": "src/pages/sidepanel/index.html"
  },
  "options_page": "src/pages/options/index.html",
  "background": {
    "service_worker": "src/pages/background/index.js",
    "type": "module"
  },
  "action": {
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://web.whatsapp.com/*",
        "*://*.dash.z0z.app/*"
      ],
      "js": ["dist/src/pages/content/index.js"],
      "css": ["assets/css/contentStyle*.chunk.css"]
    },
    {
      "matches": [
        "*://web.whatsapp.com/*",
        "*://*.dash.z0z.app/*"
      ],
      "js": ["src/pages/contentUI/index.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/pages/content/client/inicializer.js",
        "src/pages/content/libs/moduleraid.js",
        "assets/js/*.js",
        "assets/css/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "*://web.whatsapp.com/*",
    "*://*.dash.z0z.app/*"
  ]
}
